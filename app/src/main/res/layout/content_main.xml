<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity">


    //Labels
    <TextView
        android:id="@+id/totalview_label"
        android:text="@string/totalview_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/totalcount_label"
        android:text="@string/totalcount_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/totalview_label"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/resourcename_label"
        android:text="@string/resourcename_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/totalcount_label"
        android:layout_alignParentLeft="true" />




    //Values

    <TextView
        android:id="@+id/totalview_value"
        android:text="@string/totalview_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/totalview_label"
        android:layout_marginLeft="50dp" />

    <TextView
        android:id="@+id/totalcount_value"
        android:text="@string/totalcount_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/totalcount_label"
        android:layout_toRightOf="@+id/totalcount_label"
        android:layout_marginLeft="50dp" />

    <TextView
        android:id="@+id/resourcename_value"
        android:text="@string/resourcename_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/resourcename_label"
        android:layout_alignLeft="@+id/totalcount_value" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:layout_alignTop="@+id/resourcename_label">
    </ListView>


</RelativeLayout>
